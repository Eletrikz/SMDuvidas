{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "global-require": "off",
        "indent": [2, 4],
        "max-len": ["error", { "ignoreComments": true, "ignoreTrailingComments": true, "code": 150 }],
        "no-unused-vars": "off",
        "space-before-function-paren":"off"
    }
}
